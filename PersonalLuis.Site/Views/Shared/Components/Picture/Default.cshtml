@model PictureComponentVm
@if (Model.LazyLoad)
{
    <picture class="lazy @Model.PictureClass">
        @foreach (var imageUrl in Model.ImageUrls)
        {
            <source data-srcset="@imageUrl" type="image/@imageUrl.GetExtension()" />
        }
        <img data-src="@Model.ImageUrls.LastOrDefault()" src="/images/blur.png" alt="@Model.ImageAlt" class="@Model.ImageClass" />
    </picture>
}
else
{
    <picture class="@Model.PictureClass">
        @foreach (var imageUrl in Model.ImageUrls)
        {
            <source srcset="@imageUrl" type="image/@imageUrl.GetExtension()" />
        }
        <img src="@Model.ImageUrls.LastOrDefault()" alt="@Model.ImageAlt" class="@Model.ImageClass" />
    </picture>
}

