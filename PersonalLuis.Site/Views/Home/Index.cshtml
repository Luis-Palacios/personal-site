                                                    <div class="card">
                                                        <div class="card-image waves-effect waves-block waves-light">
                                                            <div class="card-img-wrap">
                                                                <img class="activator" src="@devtool.PictureUrl" alt="@devtool.Name">
                                                            </div>
                                                        </div>
                                                        <div class="card-content">
